var mWin = Ti.UI.createWindow({
	top:20,
	height : Ti.UI.setHieght,
	width : Ti.UI.setWidth,
	backgroudnColor : '#fff'
});

// var mNavWin = Ti.UI.IOS.createNavigationWindow({
	// window : mWin
// });

var sampleLabel = Ti.UI.createLabel({
	top : 20,
	left : 20,
	text : "Simple Mobile App Demo",
	font: {fontSize: 24, fontFamily: "Helvetica", fontWeight: "bold"},
	color: "#fff"
});

var image = Ti.UI.createImageView({
	bottom : 100,
	right : 20,
	hieght : 60,
	width : 60,
	image : 'IMG_0180.jpg'
});

var nameLabel = Ti.UI.createLabel({
	bottom : 60,
	right : 20,
	text : "Simple Mobile App Demo",
	font: {fontSize: 14, fontFamily: "Helvetica", fontWeight: "bold"},
	color: "#fff"
});

mWin.add(sampleLabel, image, nameLabel);
mWin.open();