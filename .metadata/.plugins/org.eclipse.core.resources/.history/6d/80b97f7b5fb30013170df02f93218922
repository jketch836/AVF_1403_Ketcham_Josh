});

//Save to cloud start
//save label
var save = Ti.UI.createLabel({
	top : '5%',
	right : '2%',
	text : 'Save',
	font : {
		fontStyle : 'Helvetica',
		fontSize : '22dp'
	},
	color : '#000'
});
//save eventlistener
save.addEventListener('click', function() {
	//push to cloud
	Cloud.Places.create({
		name : '32Bit Weather',
		city : box.city,
		state : box.state,
		custom_fields : {
			"Day" : box.today,
			"Updated Time" : box.time
		}
	}, function(a) {
		if (a.success) {
			alert(box.city + " has been saved to the Cloud");
		} else if (a.error) {
			alert(box.city + 'has failed to save in the cloud');
		}
	});
});
//Save to cloud end



