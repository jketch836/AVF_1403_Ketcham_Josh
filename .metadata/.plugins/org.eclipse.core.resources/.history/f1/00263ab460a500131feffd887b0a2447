//create window
var win = Ti.UI.createWindow({
	title : 'NY Times Stories',
	backgroundColor : '#fff'
});
exports.win = win;

//Scroll View Start
var timesScroll = Ti.UI.createScrollView({
	layout : 'vertical',
	height : '100%',
	width : '100%',
	top : '0%',
	showVerticalScrollIndicator : true
});
//Scroll View End

//listview template start
timesTemplate = 
{
	properties : 
	{
		top : '1%',
		height : '7%'
	},
	childTemplates : 
	[
		{
			type : "Ti.UI.Label",
			bindId : 'name',
			properties : 
			{
				color : "black",
				font : 
				{
					fontSize : 16,
					fontFamily : "Arial"
				},
				left : '7%',
				top : '1%'
			}
		}, 
		{
			type : "Ti.UI.Label",
			bindId : 'country',
			properties : 
			{
				color : "black",
				font : 
				{
					fontSize : 12,
					fontFamily : "Arial"
				},
				right : '10%',
				top : '1%'
			},
		},  		
		{
			type : "Ti.UI.Label",
			bindId : 'latitude',
			properties : 
			{
				color : "black",
				font : 
				{
					fontSize : 10,
					fontFamily : "Arial"
				},
				left : '7%',
				bottom : '1%'
			}
		}, 
		{
			type : "Ti.UI.Label",
			bindId : 'longitude',
			properties : 
			{
				color : "black",
				font : 
				{
					fontSize : 10,
					fontFamily : "Arial"
				},
				right : '7%',
				bottom : '1%'
			}
		}
	]
};
//listview template end

//listview start
var listview = Ti.UI.createListView({
	top : '0%',
	templates : {
		'defaultTemplate' : timesTemplate
	},
	defaultItemTemplate : 'defaultTemplate'
});
//listview end
exports.listview = listview;

//evt listener start
listview.addEventListener('itemclick', function(e) {
	var saveOk = function() {
		var deleteDIA = Ti.UI.createAlertDialog({
			title : 'Save?',
			buttonNames : ['Cancel', 'Save']
		});
		deleteDIA.show();

		deleteDIA.addEventListener('click', function(a) {
			if (a.index === 1) {
				// box.save(name, st, latitude, longitude, dist);
			}
		});
	};
});
//evt listener end

//Main Code
timesScroll.add(listview);
win.add(timesScroll);
win.open();

