					fontSize : 13,
					fontFamily : "Arial"
				},
				left : '5%',
				top : '1%'
			}
		}, 
		{
			type : "Ti.UI.Label",
			bindId : 'country',
			properties : 
			{
				color : "black",
				font : 
				{
					fontSize : 11,
					fontFamily : "Arial"
				},
				right : '10%',
				top : '1%'
			},
		},
		{
			type : "Ti.UI.Label",
			bindId : 'latitude',
			properties : 
			{
				color : "black",
				font : 
				{
					fontSize : 10,
