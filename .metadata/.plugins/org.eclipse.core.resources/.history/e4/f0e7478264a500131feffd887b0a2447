//require api info
var geo = require('geo_api');
// var box = require('storage');

// created tab group
var theTabs = Ti.UI.createTabGroup();

//create window
var win = Ti.UI.createWindow({
	title : 'NY Times',
	backgroundColor : '#fff'
});

// created character tab
var toonTab = Ti.UI.createTab({
	title : 'NY Times Stories',
	window : win
});

//Scroll View Start
var timesScroll = Ti.UI.createScrollView({
	layout : 'vertical',
	height : '100%',
	width : '100%',
	top : '0%',
	showVerticalScrollIndicator : true
});
//Scroll View End

//listview template start
timesTemplate = {
	properties : {
		top : '1%',
		height : '7%'
	},
	childTemplates : 
	[
		{
			type : "Ti.UI.Label",
			bindId : 'name',
			properties : 
			{
				color : "black",
				font : 
