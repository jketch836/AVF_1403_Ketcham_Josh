	top : '10%',
	center : '0%',
	text : box.tmrw,
	font : {
		fontStyle : 'Helvetica',
		fontSize : '22dp'
	},
	color : '#000'
});

var tmrwICON = Ti.UI.createImageView({
	height : '45%',
	width : '45%',
	center : '0%',
	image : box.tmrwIcon
	// image : 'partly_cloudy.png'
});

var tmrwTEMP = Ti.UI.createLabel({
	bottom : '10%',
	center : '0%',
	text : box.tmrwTemp,
	font : {
		fontStyle : 'Helvetica',
		fontSize : '22dp'
	},
	color : '#000'
});
tmrwV.add(tmrwLBL, tmrwICON, tmrwTEMP);
//Tomorrow info end

